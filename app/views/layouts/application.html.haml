%html
  %head
    %title= Glatos
    = stylesheet_link_tag    "application"
    /[if IE 6]
      = stylesheet_link_tag 'ie6'
    /[if IE 7]
      = stylesheet_link_tag 'ie7'
    = javascript_include_tag "application"
    = csrf_meta_tags

  %body

    #container

      .header
      .clear
      #navigation
        .left
          = render 'shared/navigation'
        .right
          = render 'shared/glatos_navigation'

      #content
        - flash.each do |name, msg|
          = content_tag :p, msg, :class => "flasher #{name}" if msg.is_a?(String)

        = yield

      .footer

New Report

= semantic_form_for @report do |f|
  = f.inputs do
    = f.input :tag
    = f.input :description
    = f.input :method,      :as => :select,   :collection => Report::METHODS,   :label => "How did you find the tag?"
    = f.input :name
    = f.input :phone,       :as => :string
    = f.input :email,       :as => :string
    = f.input :city
    = f.input :state,       :as => :select,   :collection => State::NAMES,      :label => "State/Province"
    = f.input :length,      :as => :string,                                     :label => "Fish Length (inches)"
    = f.input :weight,      :as => :string,                                     :label => "Fish Weight (pounds)"
    = f.input :fishtype,    :as => :select,   :collection => Fish::TYPES,       :label => "What type of fish?"
    = f.input :found

  = f.buttons
